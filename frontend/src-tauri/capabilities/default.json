{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:default",
    "dialog:allow-open",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-rename",
    "fs:scope-home-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**/*" },
        { "path": "**/.*" },
        { "path": "**/.trash/*" }
      ]
    }
  ]
}
